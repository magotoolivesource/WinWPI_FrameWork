compilation_database_dir: .
output_directory: diagrams
diagrams:
  # 클래스 다이어그램
  class_overview:
    type: class

    glob:
      - "FrameWork_2DAPI/**/*.h"
      - "FrameWork_2DAPI/**/*.cpp"
    include:
      namespaces:
        - ""
    exclude:
      namespaces:
        - "std"
        - "boost"
    plantuml:
      before:
        - "!theme plain"
        - "skinparam classAttributeIconSize 0"
        - "left to right direction"
      after:
        - "note top : Generated by clang-uml"

  # 시퀀스 다이어그램 - main 함수 흐름
  sequence_main:
    type: sequence
    glob:
      - "FrameWork_2DAPI/**/*.h"
      - "FrameWork_2DAPI/**/*.cpp"
    include:
      namespaces:
        - ""
    exclude:
      namespaces:
        - "std"
    from:
      - function: "main"
    to:
      - function: "Car::Car"
      - function: "Car::start"
      - function: "Car::stop"
    plantuml:
      before:
        - "!theme plain"
        - "skinparam sequenceMessageAlign center"

  # 시퀀스 다이어그램 - Car 클래스 메서드들
  sequence_car_methods:
    type: sequence
    glob:
      - "FrameWork_2DAPI/**/*.h"
      - "FrameWork_2DAPI/**/*.cpp"
    include:
      namespaces:
        - ""
    exclude:
      namespaces:
        - "std"
    from:
      - function: "Car::start"
      - function: "Car::stop"
    to:
      - function: "Engine::startEngine"
      - function: "Engine::stopEngine"
    plantuml:
      before:
        - "!theme plain"

  # 패키지 다이어그램
  package_structure:
    type: package
    glob:
      - "FrameWork_2DAPI/**/*.h"
      - "FrameWork_2DAPI/**/*.cpp"
    include:
      namespaces:
        - ""
    exclude:
      namespaces:
        - "std"
    plantuml:
      before:
        - "!theme plain"
        - "skinparam packageStyle rectangle"

  # 포함 다이어그램 (Include/Dependency)
  include_dependencies:
    type: include
    glob:
      - "FrameWork_2DAPI/**/*.h"
      - "FrameWork_2DAPI/**/*.cpp"
    include:
      paths:
        - "FrameWork_2DAPI/**"
    exclude:
      paths:
        - "/usr/include"
        - "/usr/local/include"
    plantuml:
      before:
        - "!theme plain"
        - "left to right direction"